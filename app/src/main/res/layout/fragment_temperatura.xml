<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#FFFFFF"
    android:layout_height="match_parent"
    tools:context=".Temperatura">


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@drawable/rounded_border">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginRight="80dp"
            android:layout_marginTop="35dp"
            android:layout_marginLeft="20dp"
            android:src="@drawable/gotas" />

        <TextView
            android:id="@+id/textViewDate"
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:layout_marginTop="35dp"
            android:layout_marginLeft="260dp"
            android:textSize="18sp"
            android:textColor="@android:color/black"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:gravity="center"/>

        <TextView
            android:layout_width="90dp"
            android:layout_height="45dp"
            android:text="Water Flow"
            android:layout_marginTop="35dp"
            android:layout_marginLeft="65dp"
            android:textSize="35sp"
            android:fontFamily="@font/virtual"
            android:textColor="@android:color/black"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:gravity="center"/>

    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="120dp">

        <TextView
            android:layout_width="130dp"
            android:layout_height="80dp"
            android:text="100Â°"
            android:layout_marginTop="35dp"
            android:layout_marginLeft="95dp"
            android:textSize="80sp"
            android:fontFamily="@font/bebas"
            android:textColor="#5271FF"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:gravity="center"
            android:id="@+id/tv_temp"/>

        <ImageView
            android:layout_width="25dp"
            android:layout_marginTop="120dp"
            android:layout_marginLeft="120dp"
            android:layout_height="30dp"
            android:src="@drawable/goti"/>

        <TextView
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:text="C"
            android:layout_marginTop="115dp"
            android:layout_marginLeft="120dp"
            android:textSize="25sp"
            android:fontFamily="@font/montserratregular"
            android:textColor="@android:color/black"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:gravity="center"/>

        <TextView
            android:layout_width="90dp"
            android:layout_height="30dp"
            android:text="Estado"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="155dp"
            android:textSize="25sp"
            android:fontFamily="@font/bebas"
            android:textColor="@android:color/black"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:gravity="center"/>

        <ImageView
            android:layout_width="60dp"
            android:layout_height="120dp"
            android:layout_marginLeft="240dp"
            android:layout_marginTop="40dp"
            android:src="@drawable/termo" />

    </FrameLayout>

    <FrameLayout
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:layout_marginLeft="55dp"
        android:layout_marginTop="300dp"
        android:background="@drawable/rounded_border">

        <TextView
            android:layout_width="240dp"
            android:layout_height="55dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/bebas"
            android:text="Temperatura"
            android:textAlignment="textStart"
            android:textColor="@android:color/black"
            android:textSize="35sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
        
        <TextView
            android:layout_width="140dp"
            android:layout_height="55dp"
            android:layout_marginLeft="210dp"
            android:layout_marginTop="6dp"
            android:fontFamily="@font/bebas"
            android:text="Alto"
            android:textAlignment="textStart"
            android:textColor="#FF0000"
            android:textSize="44sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:id="@+id/tv_estTemp"/>

    </FrameLayout>

    <FrameLayout
        android:layout_width="301dp"
        android:layout_height="326dp"
        android:layout_marginLeft="55dp"
        android:layout_marginTop="390dp"
        android:background="@drawable/rounded_border">

        <TextView
            android:id="@+id/txtcliente"
            android:layout_width="240dp"
            android:layout_height="55dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/bebas"
            android:gravity="center"
            android:text="Iniciar Ducha"
            android:textColor="@android:color/black"
            android:textSize="35sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginLeft="70dp"
            android:layout_marginTop="80dp"
            android:layout_marginRight="80dp"
            android:src="@drawable/toilet" />

        <Button
            android:id="@+id/btnliberar"
            android:layout_width="170dp"
            android:layout_height="40dp"
            android:layout_marginLeft="70dp"
            android:layout_marginTop="240dp"
            android:backgroundTint="#004AAD"
            android:text="Liberar"
            android:textSize="14sp" />


    </FrameLayout>

</RelativeLayout>