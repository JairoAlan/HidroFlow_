<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Fondo del FrameLayout -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#B1E3FA" /> <!-- Color de fondo -->
            <corners android:radius="16dp" /> <!-- Radio de los bordes -->
        </shape>
    </item>
    <!-- Borde del FrameLayout -->
    <item>
        <shape android:shape="rectangle">
            <stroke android:width="4dp" android:color="#B1E3FA" /> <!-- Ancho y color del borde -->
            <corners android:radius="16dp" /> <!-- Radio de los bordes -->
        </shape>
    </item>
</layer-list>
